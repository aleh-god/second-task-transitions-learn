<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/item_margin"
    >
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drawable"
        android:layout_width="@dimen/item_drawable_size"
        android:layout_height="@dimen/item_drawable_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/rv_padding"
        tools:src="@drawable/circular_vintage"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tittle_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/drawable"
        app:layout_constraintBottom_toTopOf="@id/description_item"
        tools:text="Tittle 1000"
        style="@style/Widget.SecondTask.TextView"
        android:textAppearance="@style/TextAppearance.SecondTask.Tittle"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittle_item"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Description 1000"
        style="@style/Widget.SecondTask.TextView"
        android:textAppearance="@style/TextAppearance.SecondTask.Description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>